                    <a href="/articles/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a href="/artigos/page/2" style="float: right">Next >>></a>
            </div>
