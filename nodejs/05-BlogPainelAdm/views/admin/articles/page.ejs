<%- include ('../../partials/header.ejs'); %>
<body>

    <%- include('../../partials/raizNavbar.ejs'); %>
    <div class="container">
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/articles/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
        <% }) %>
        
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) {%>
                    <a href="/artigos/page/<%= result.page - 1 %>" style="float: left"> <<<< Prev </a>
                <% } else if (result.page == 2) { %>
                    <a href="/" style="float: left"> <<<< Prev </a>
                <% } %>

                <% if(result.next) {%>
                    <a href="/artigos/page/<%= result.page + 1 %>" style="float: right">Next >>></a>
                <% } %>
            </div>
        </div>
        <hr>
        
    </div>
</body>

<%- include('../../partials/footer.ejs');%>