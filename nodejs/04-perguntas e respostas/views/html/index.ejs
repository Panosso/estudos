<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Perguntas e Respostas</title>
</head>
<body>
    
    <h1>Guida de perguntas</h1>
    <hr>
    <h3>Lista de perguntas</h3>
    <h4>

        <%= nome%><br>
        <%= lenght%><br>

        <% if(msg) {%>

            <h3 style="color: red;">Erro: Essa é uma msg de erro</h3>

        <% } else {%>

            <h3 style="color: green;">Tudo certo, é noix!!!</h3>

        <% }%>

        <% produtos.forEach(function(produto){ %>

            <ol>
                <li>Nome: <%= produto.nome %> Valor: R$ <%= produto.preco %></li>
            </ol>

        <%})%>

    </h4>

    <img src="/imagens/1.jpg">

</body>

